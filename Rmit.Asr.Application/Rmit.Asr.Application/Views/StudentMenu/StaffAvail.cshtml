@model IEnumerable<Rmit.Asr.Application.Models.Slot>

@if (Model.Any() )
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffId)
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Staff haven't made any slots available for this day</p>
}
